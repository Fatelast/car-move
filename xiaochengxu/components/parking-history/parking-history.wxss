/* components/parking-history/parking-history.wxss */
.history-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f2f2f7; /* iOS system gray 6 */
  box-sizing: border-box;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  position: sticky;
  top: 0;
  z-index: 10;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.back-btn {
  padding: 16rpx;
  margin-left: -16rpx;
  border-radius: 50%;
  color: #007aff; /* iOS blue */
  font-size: 36rpx;
  line-height: 1;
}

.back-btn:active {
  background: rgba(0,0,0,0.05);
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  color: #000;
}

.spacer {
  width: 60rpx;
}

.list-scroll {
  flex: 1;
  height: 0; /* Important for flex scroll */
}

.list-content {
  padding: 30rpx;
  padding-bottom: 100rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 50vh;
  color: #8e8e93;
  gap: 30rpx;
}

.empty-icon-bg {
  width: 120rpx;
  height: 120rpx;
  background: #e5e5ea;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-calendar {
  font-size: 60rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
}

.record-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.card-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.date-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #64748b;
}

.cost-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.cycle-badge {
  font-size: 20rpx;
  font-weight: bold;
  color: #c2410c;
  background: #fff7ed;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  border: 1rpx solid #ffedd5;
}

.price-badge {
  font-size: 28rpx;
  font-weight: bold;
  color: #c2410c;
  background: rgba(255, 237, 213, 0.5);
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: baseline;
}

.currency {
  font-size: 20rpx;
  margin-right: 4rpx;
}

.location-row {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.pin-icon-bg {
  background: #f8fafc;
  padding: 10rpx;
  border-radius: 16rpx;
  color: #94a3b8;
  font-size: 28rpx;
  margin-top: 4rpx;
}

.location-text {
  flex: 1;
}

.location-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  line-height: 1.4;
}

.location-sub {
  font-size: 24rpx;
  color: #94a3b8;
  margin-top: 4rpx;
}

.location-sub.italic {
  font-style: italic;
}

.card-bottom {
  border-top: 1rpx solid #f8fafc;
  padding-top: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.duration-label {
  font-size: 28rpx;
  color: #94a3b8;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.duration-value-group {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.unit-cost {
  font-size: 20rpx;
  color: #cbd5e1;
}

.duration-val {
  font-family: monospace;
  font-size: 32rpx;
  font-weight: bold;
  color: #334155;
}

.footer {
  padding: 30rpx;
  text-align: center;
  background: #f8fafc;
}

.clear-btn {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #94a3b8;
  padding: 16rpx 32rpx;
}

.clear-btn:active {
  color: #ef4444;
}

.animate-fade-in {
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}
