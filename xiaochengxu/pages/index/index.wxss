/** index.wxss */
.container {
  position: relative;
  min-height: 100vh;
  background-color: #fff7ed; /* brand-50 */
  padding: 0;
  display: block;
}

.bg-mesh {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  opacity: 0.4;
  z-index: 0;
}

.blob {
  position: absolute;
  width: 500rpx;
  height: 500rpx;
  border-radius: 50%;
  filter: blur(100rpx);
}

.blob-1 {
  top: -10%;
  right: -5%;
  background-color: #f9e0b1;
}

.blob-2 {
  bottom: -10%;
  left: -5%;
  background-color: #f09e5c;
}

.content {
  position: relative;
  z-index: 10;
  padding-top: 20rpx;
  padding-bottom: 100rpx;
}

.footer {
  position: fixed;
  bottom: 40rpx;
  width: 100%;
  text-align: center;
  pointer-events: none;
  z-index: 20;
}

.footer-content {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
  opacity: 0.8;
  font-size: 24rpx;
  color: #94a3b8; /* slate-400 */
}

.icon-bg {
  background-color: #ffedd5; /* brand-100 */
  padding: 6rpx;
  border-radius: 50%;
  display: flex;
}

.icon-car {
  width: 24rpx;
  height: 24rpx;
}
